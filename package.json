{
  "name": "@voilajs/appkit",
  "version": "1.0.0",
  "description": "A minimal, framework-agnostic Node.js application toolkit",
  "main": "src/index.js",
  "type": "module",
  "exports": {
    ".": "./src/index.js",
    "./auth": "./src/auth/index.js",
    "./tenantdb": "./src/tenantdb/index.js",
    "./cache": "./src/cache/index.js",
    "./events": "./src/events/index.js",
    "./security": "./src/security/index.js",
    "./error": "./src/error/index.js",
    "./logging": "./src/logging/index.js",
    "./storage": "./src/storage/index.js",
    "./email": "./src/email/index.js",
    "./queue": "./src/queue/index.js",
    "./config": "./src/config/index.js",
    "./validation": "./src/validation/index.js",
    "./utils": "./src/utils/index.js"
  },
  "files": [
    "src/",
    "types/"
  ],
  "types": "./types/index.d.ts",
  "scripts": {
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/",
    "format": "prettier --write 'src/**/*.js'",
    "build:types": "tsc",
    "prepublishOnly": "npm run build:types"
  },
  "keywords": [
    "nodejs",
    "toolkit",
    "framework-agnostic",
    "auth",
    "database",
    "cache",
    "events",
    "security"
  ],
  "author": "VoilaJS",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "esbuild": ">=0.25.0",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@vitest/coverage-v8": "^3.1.3",
    "eslint": "^9.0.0",
    "prettier": "^3.2.4",
    "vitest": "^3.1.3"
  },
  "optionalDependencies": {
    "@aws-sdk/client-s3": "^3.0.0",
    "@aws-sdk/client-ses": "^3.0.0",
    "@aws-sdk/s3-request-presigner": "^3.0.0",
    "@sendgrid/mail": "^8.1.5",
    "bull": "^4.10.0",
    "mailgun.js": "^9.0.0",
    "memcached": "^2.2.2",
    "mysql2": "^3.5.0",
    "nodemailer": "^6.9.0",
    "pg": "^8.11.0",
    "redis": "^4.6.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/voilajs/appkit.git"
  },
  "bugs": {
    "url": "https://github.com/voilajs/appkit/issues"
  },
  "homepage": "https://github.com/voilajs/appkit#readme"
}
